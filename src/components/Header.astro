---
import HeaderLink from "./HeaderLink.astro";
import AntIcon from "./icons/AntIcon";
import ThemeToggle from './ThemeToggleButton'
---

<header class="fixed w-full px-4 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3 text-base">
      <a href="/" class="group">
        <h2 class="font-semibold tracking-tighter font-mplus text-lg">
          <AntIcon />
        </h2>
      </a>
      <div class="items-center gap-6 hidden md:flex">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/artikel">Artikel</HeaderLink>
        <HeaderLink href="/artikel">Video</HeaderLink>
        <HeaderLink href="/artikel">Produk</HeaderLink>
      </div>
      <div class="flex-1"></div>
      <ThemeToggle client:visible />
    </nav>
  </div>
</header>
